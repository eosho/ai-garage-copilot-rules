# Environment variables for the weather API service
# Copy this to .env and adjust values as needed

# Server configuration
WEATHER_API_HOST=0.0.0.0
WEATHER_API_PORT=8000

# Application configuration
WEATHER_API_ENVIRONMENT=development
WEATHER_API_LOG_LEVEL=INFO

# CORS configuration (adjust for production)
WEATHER_API_CORS_ORIGINS=["*"]

# Rate limiting
WEATHER_API_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Mock data configuration
WEATHER_API_ENABLE_MOCK_DATA=true
WEATHER_API_MOCK_RESPONSE_DELAY_MS=0
